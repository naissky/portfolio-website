---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const proyects = await getCollection('proyects');
---

<Layout>
  <div class="min-h-screen mt-24 xl:mt-10 flex flex-col items-center justify-center">
    <h1 class="text-8xl font-bold">Proyectos</h1>

    <!-- grid de proyectos -->
    <div class="mt-10 w-full grid grid-cols-12 gap-y-3 place-items-center">
      {
        proyects.map(proyect => (
          <div class="col-span-12 md:col-span-6 bg-black mx-auto rounded-3xl overflow-hidden">
            <a href={`/proyects/${proyect.slug}`} class="group">
              <div class="absolute mx-2 my-2 z-40 max-w-[270px] md:max-w-[370px] bg-zinc-950 rounded-3xl px-8 py-4 flex flex-col items-start justify-center opacity-0 group-hover:opacity-100 ease-in-out duration-300">
                <h2 class="text-2xl font-bold text-white">{proyect.data.title}</h2>
              </div>
              <div class="relative">
                <img
                  src={proyect.data.image}
                  alt={proyect.data.title}
                  class="w-full h-auto object-cover opacity-75 group-hover:opacity-30 hover:scale-110 transition ease-in-out duration-300"
                />
              </div>
            </a>
          </div>
        ))
      }
    </div>
  </div>
</Layout>
