<style>
  .scroll-container {
    width: 100%;
    white-space: nowrap;
  }

  .scroll-text {
    display: inline-block;
    animation: scroll 20s linear infinite;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Para que la animación sea más suave */
  .scroll-text span {
    display: inline-block;
    transition: all 0.2s ease;
  }

  .scroll-text span:hover {
    transform: scale(1.1);
    color: #00DFD8;
  }
</style>